extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/quiz/submit")
            input(type="radio", name="answer", value="0") #{options[0]}
            input(type="radio", name="answer", value="1") #{options[1]}
            input(type="radio", name="answer", value="2") #{options[2]}
            input(type="radio", name="answer", value="3") #{options[3]}
            
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Submit
