extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/quiz/submit")
            h2 #{question}

            p
                input(type="radio", id="answer1" name="answer", value="0", checked)
                label(for="answer1") #{options[0]}
            
            p
                input(type="radio", id="answer2" name="answer", value="1")
                label(for="answer2") #{options[1]}
            
            p  
                input(type="radio", id="answer3" name="answer", value="2")
                label(for="answer3") #{options[2]}

            p
                input(type="radio", id="answer4" name="answer", value="3")
                label(for="answer4") #{options[3]}
            
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Submit
